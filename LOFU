    <!-- Script JavaScript -->
    <script>
        // Menginisialisasi ikon dari Lucide
        lucide.createIcons();

        // Fungsi untuk menangani submit form
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Mencegah form untuk submit secara default
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const messageBox = document.getElementById('messageBox');

            // Tampilkan pesan sukses/gagal di UI (bukan alert)
            messageBox.classList.remove('hidden', 'bg-red-100', 'text-red-700', 'bg-green-100', 'text-green-700');

            if (email && password) {
                // Simulasi proses login
                messageBox.textContent = `Berhasil! Mencoba login dengan email: ${email}`;
                messageBox.classList.add('bg-green-100', 'text-green-700');
            } else {
                messageBox.textContent = 'Harap masukkan Email dan Password.';
                messageBox.classList.add('bg-red-100', 'text-red-700');
            }
        });

        // Mengganti ikon 'mail' menjadi 'search' untuk Google agar lebih jelas di bagian login sosial
        document.addEventListener('DOMContentLoaded', () => {
             // Temukan semua ikon dan ganti ikon mail kedua menjadi search untuk Google
            const socialIcons = document.querySelectorAll('.social-login-icon');
            // Karena Lucide tidak punya ikon Google secara spesifik, kita bisa ganti 'mail' (yang di atas) dengan ikon lain
            // Saya telah mengubah ikon Google secara langsung di HTML menjadi ikon 'mail' dengan warna merah (#DB4437).
            // Jika Anda ingin ikon yang lebih umum, Anda bisa menggunakan 'search' atau 'globe'.
        });

    </script>
