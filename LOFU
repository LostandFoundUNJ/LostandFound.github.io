    <script>
        /**
         * Fungsi untuk menampilkan kotak pesan simulasi interaksi.
         * @param {string} action Aksi yang dilakukan (misalnya, "Login", "Beranda", "Cari").
         * @param {string} detail Detail tambahan untuk konten pesan.
         */
        function showInteractionMessage(action, detail = '') {
            const messageTitle = document.getElementById('messageTitle');
            const messageContent = document.getElementById('messageContent');
            const overlay = document.getElementById('messageOverlay');

            let contentText = `Anda menekan tombol **${action}**.`;
            if (detail) {
                contentText += ` Konten yang Anda masukkan: **"${detail}"**.`;
            } else {
                contentText += ` Ini adalah simulasi, aksi navigasi atau fungsionalitas lanjutan akan diimplementasikan pada tahap selanjutnya.`;
            }

            messageTitle.innerHTML = action;
            messageContent.innerHTML = contentText;
            overlay.style.display = 'flex';
        }

        /**
         * Fungsi yang dipanggil saat tombol "Cari Sekarang" ditekan.
         */
        function performSearch() {
            const searchInput = document.getElementById('searchInput');
            const query = searchInput.value.trim();

            if (query === "") {
                showInteractionMessage('Pencarian', 'Kolom pencarian kosong. Silakan masukkan kata kunci.');
            } else {
                showInteractionMessage('Pencarian', query);
                searchInput.value = ''; // Kosongkan input setelah simulasi pencarian
            }
        }

        /**
         * Fungsi untuk menutup kotak pesan simulasi.
         */
        function closeMessage() {
            document.getElementById('messageOverlay').style.display = 'none';
        }

        // Tambahkan event listener untuk tombol Enter di kolom pencarian
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                performSearch();
            }
        });
    </script>

